{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "module": "ES6",
    "target": "ES6",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src"
  ],
}